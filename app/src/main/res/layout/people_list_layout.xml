<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/people_list_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/img_circle"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/people_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Name"
            app:layout_constraintLeft_toRightOf="@id/people_list_image"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#78767A"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/people_list_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Email Address"
            app:layout_constraintLeft_toRightOf="@id/people_list_image"
            app:layout_constraintTop_toBottomOf="@id/people_list_name"
            android:textSize="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/people_list_jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People Name"
            app:layout_constraintLeft_toRightOf="@id/people_list_image"
            app:layout_constraintTop_toBottomOf="@id/people_list_email"
            android:textSize="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>